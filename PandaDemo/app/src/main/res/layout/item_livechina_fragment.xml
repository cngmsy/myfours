<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/live_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y350" >

        <com.dl7.player.media.IjkPlayerView
            android:id="@+id/jcvideoplayer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y350" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/look_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/_no_img"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pla_continue"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/bofang" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <TextView
            android:id="@+id/look_name"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="简介"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginTop="@dimen/y10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/look_come"
                android:src="@drawable/com_facebook_tooltip_blue_bottomnub"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/huise"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/look_content"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
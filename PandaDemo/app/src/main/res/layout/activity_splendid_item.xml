<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_splendid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_splendid"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_splendid"
            android:layout_marginLeft="8dp"
            android:background="@drawable/default_time_view">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_play_arrow_white_24dp" />

            <TextView
                android:id="@+id/tv_splendid_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv"
                android:text="Live"
                android:textColor="@color/baise" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_splendid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="标题"
            android:textColor="@color/heise"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_splendid_daytime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_splendid"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="150dp"
            android:text="日期" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#efe5e5"/>


</LinearLayout>

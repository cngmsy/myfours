<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rrr"
    android:background="#ffffff"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bobao_title"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fdfdfdfd"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toRightOf="@+id/bobao_image"
        android:layout_toEndOf="@+id/bobao_image"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/bobao_context"
        android:textSize="14dp"
        android:text="fdfdfdfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bobao_image"
        android:layout_alignLeft="@+id/bobao_title"
        android:layout_alignStart="@+id/bobao_title" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/bobao_image"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/bobao_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

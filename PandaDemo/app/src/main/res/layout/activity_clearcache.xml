<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:padding="5dp">
        <!--返回按钮-->
        <ImageView
            android:id="@+id/MySet_Return"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y70"
            android:src="@drawable/personal_back_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:text="设置"
            android:layout_gravity="center"
            android:textColor="@color/white_fafaf8"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/MySet_Cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/y16"
        android:paddingTop="@dimen/y16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:text="清理缓存"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/MySet_CacheShu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"

            />
    </RelativeLayout>

</LinearLayout>
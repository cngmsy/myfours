<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:layout_margin="@dimen/x12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/chinaimage"
            android:scaleType="fitXY"
            android:src="@drawable/tab_panda_eye_normal"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y150"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chinaimage"
            android:src="@drawable/lpanda_bottom_gra" />

        <ImageView
            android:src="@drawable/lpanda_live_layer"
            android:layout_alignBottom="@+id/chinaimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginBottom="@dimen/y8"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chinaimage"
            android:layout_marginLeft="@dimen/y40"
            android:layout_marginBottom="@dimen/y8"
            android:text="live"
            android:textColor="@color/baise"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/chinatext"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y60"
            android:layout_below="@+id/chinaimage"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#000"
            android:text="你好不知道比在干啥什么鬼东西" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#dbd9d9"
        android:layout_height="@dimen/y1" />
</LinearLayout>
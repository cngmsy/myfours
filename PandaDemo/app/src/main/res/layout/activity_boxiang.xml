<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_boxiang"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiyun.qcloud.dashixummoban.ui.observation.bobaoxiang.BoxiangActivity">

    <RelativeLayout
        android:id="@+id/relk"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv_bxtitle"
            android:text="爱丁堡动物园大熊猫"
            android:layout_margin="6dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_bxsource"
            android:text="人民网"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_bxtitle"
            android:layout_alignLeft="@+id/tv_bxtitle"
            android:layout_alignStart="@+id/tv_bxtitle" />

        <TextView
            android:id="@+id/tv_bxpubtime"
            android:text="2017-08-11 09:16:22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_bxsource"
            android:layout_alignBottom="@+id/tv_bxsource"
            android:layout_toRightOf="@+id/tv_bxsource"
            android:layout_toEndOf="@+id/tv_bxsource"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_bxcontent"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bxsource"
            android:layout_alignLeft="@+id/tv_bxsource"
            android:layout_alignStart="@+id/tv_bxsource"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rehg"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/img_cang"
            android:src="@drawable/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_share"
            android:layout_toStartOf="@+id/img_share" />

        <ImageView
            android:id="@+id/img_share"
            android:src="@drawable/pe_share_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="151dp"
            android:layout_marginEnd="151dp"
            android:layout_alignTop="@+id/img_cang"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>

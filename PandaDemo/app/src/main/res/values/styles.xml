<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="fade" >
        <item name="android:windowEnterAnimation">@anim/in_from_right</item>
        <item name="android:windowExitAnimation">@anim/out_to_right</item>
    </style>
</resources>
